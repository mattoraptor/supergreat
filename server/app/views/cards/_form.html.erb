<%= form_for(card) do |f| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :character %>
    <%= f.text_field :character %>
  </div>

  <div class="field">
    <%= f.label :card_type %>
    <%= f.select :card_type, options_for_select(Card.cardTypes, card.card_type) %>
  </div>

  <div class="field">
    <%= f.label :effect %>
    <%= f.text_field :effect %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
